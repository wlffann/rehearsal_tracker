<main class='company-show'>
  <section class='company-info'>
    <%= image_tag(@company.logo_url) %>
    <h2><%= @company.name %></h2>
    <h4><%= @company.location %></h4>
    <% if can? :manage, @company %>
      <%= link_to "Create a new production", new_company_production_path(@company), class: 'orange-button' %>
    <% end %>
    <h4>Managers</h4>
    <hr>
    <ul>
      <% @company.company_managers.each do |manager| %>
        <li><%= manager.user.name %></li>
      <% end %>
    </ul>
  </section>

  <section class='company-productions'>
    <% @company.productions.each do |production| %>
      <div class='production-card'>
        <%= image_tag(production.logo_url) %>
        <h4><%= link_to production.title, company_production_path(@company.name, production.title) %></h4> 
      </div>
    <% end %>

  </section>
</main>
